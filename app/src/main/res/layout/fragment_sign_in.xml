<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:facebook="https://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="NamespaceTypo">

    <android.support.v7.widget.CardView
        android:id="@+id/login_card"
        style="@style/SelectableItemTheme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:clickable="true"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="4dp"
        tools:ignore="KeyboardInaccessibleWidget,ObsoleteLayoutParam">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp"
            tools:ignore="Orientation">

            <TextView
                android:id="@+id/title_sign_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_btn"
                android:layout_gravity="center"
                android:text="sign-in"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="40dp"
                tools:ignore="HardcodedText,ObsoleteLayoutParam" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_marginBottom="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textColorHint="#a9a59f">

                            <EditText
                                android:id="@+id/email_l"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/selectorbgedit"
                                android:drawableLeft="@mipmap/user_name"
                                android:drawablePadding="5dp"
                                android:hint="Username"
                                android:inputType="textEmailAddress"
                                android:paddingBottom="2dp"
                                android:textColor="#2fa881"
                                android:textCursorDrawable="@drawable/bginputcursor"
                                android:textSize="15dp" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textColorHint="#a9a59f">

                            <EditText
                                android:id="@+id/password_l"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/selectorbgedit"
                                android:drawableLeft="@mipmap/password"
                                android:drawablePadding="5dp"
                                android:hint="password"
                                android:inputType="textPassword"
                                android:paddingBottom="2dp"
                                android:textColor="#2fa881"
                                android:textCursorDrawable="@drawable/bginputcursor"
                                android:textSize="15dp" />

                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/login_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/btn_bg"
                            android:stateListAnimator="@drawable/statelistanimatorz"
                            android:text="sign-in"
                            android:textAllCaps="false"
                            android:textColor="#fff"
                            tools:ignore="UnusedAttribute" />

                        <TextView
                            android:id="@+id/tv_forget_password"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/login_btn"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="forget your password ?"
                            android:textAllCaps="true"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>


                </LinearLayout>
            </ScrollView>


        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
