<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:background="@color/colorPrimary"
    android:orientation="horizontal"
    android:padding="10dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_profile_pic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/facebook_default"
        app:civ_border_color="#FF000000"
        app:civ_border_width="0.5dp"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/textViewNameNav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/nav_profile_pic"
        android:gravity="start"
        android:layout_below="@+id/nav_profile_pic"
        android:paddingStart="8dp"
        android:padding="10dp"
        android:text="name"
        android:textSize="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#fff"
        tools:ignore="RtlCompat,RtlSymmetry" />

    <TextView
        android:id="@+id/textViewEmailNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/nav_profile_pic"
        android:gravity="start"
        android:layout_below="@+id/textViewNameNav"
        android:text="phone"
        android:textColor="#fff"
        tools:ignore="RtlCompat" />

</RelativeLayout>
